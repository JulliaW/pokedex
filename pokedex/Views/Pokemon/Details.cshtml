@model Pokedex.Models.PokemonDetails.Root

@{
    ViewData["Title"] = "Details";
}

<div>
    <h1>@Model.name</h1>
    <hr />

    <div class="perfil">
        <img class="card-avatar @Model.types[0].type.name"
             src="@Model.img" />
    </div>
    <br />
    <label>
        <i class="fa-solid fa-id-card-clip"></i>
        Id:
        <span>@Model.id</span>
    </label>
    <br />
    <label>
        Altura:
        <span>@Model.height</span>
    </label>
    <br />
    <label>
        Experiência:
        <span>@Model.base_experience</span>
    </label>
    <br />
    <label>
        Tipo:
        <span>@Model.types[0].type.name</span>
    </label>

</div>
